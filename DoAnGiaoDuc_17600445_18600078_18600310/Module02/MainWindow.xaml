<Window x:Class="Module02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Module02"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <StackPanel VerticalAlignment="Center"  >
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" >
            <TextBlock  FontSize="20">User name:</TextBlock>
            <TextBox Text="Tên Tài Khoản" FontSize="20" </TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock FontSize="20">Pass:</TextBlock>
            <TextBox Text="mật khẩu" FontSize="20"></TextBox>
        </StackPanel>
        <StackPanel>
            <Border   BorderThickness="3" BorderBrush="BlueViolet" Height="40" Width="110">
                <Button  HorizontalAlignment="Center" FontSize="20">Đăng nhập</Button>
            </Border>
            <Button HorizontalAlignment="Center">Đăng kí tài khoản mới</Button>
            <TextBlock HorizontalAlignment="Center">Quên mật khẩu?</TextBlock>
        </StackPanel>

    </StackPanel>

</Window>
